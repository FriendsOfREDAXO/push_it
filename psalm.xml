<?xml version="1.0"?>
<psalm
    errorLevel="3"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    phpVersion="8.3"
>
    <projectFiles>
        <directory name="." />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="assets" />
            <directory name="tests" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <!-- PHP 8.3+ optimizations -->
        <MixedAssignment errorLevel="info" />
        <MixedArrayAccess errorLevel="info" />
        <MixedArgumentTypeCoercion errorLevel="info" />
        
        <!-- Strict types enforcement -->
        <PossiblyNullReference errorLevel="error" />
        <PossiblyUndefinedArrayOffset errorLevel="error" />
        <InvalidArrayOffset errorLevel="error" />
        
        <!-- REDAXO specific suppressions -->
        <UndefinedFunction>
            <errorLevel type="suppress">
                <referencedFunction name="rex_*" />
            </errorLevel>
        </UndefinedFunction>
        
        <UndefinedClass>
            <errorLevel type="suppress">
                <referencedClass name="rex_*" />
            </errorLevel>
        </UndefinedClass>
    </issueHandlers>
</psalm>
